<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="cmpmchad.ljmu.ac.uk.holidayhelper.Websites"
    tools:showIn="@layout/activity_websites">


    <TextView
        android:id="@+id/txtLink1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ThomasCook"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_marginTop="61dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:linksClickable="true"/>

    <TextView
        android:id="@+id/txtLink2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Thomson"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/txtLink1"
        android:layout_centerHorizontal="true"
        android:linksClickable="true"/>

    <TextView
        android:id="@+id/txtLink3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtLink2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:text="@string/TravelSupermarket"
        android:textAlignment="center"
        android:textSize="20sp"
        android:linksClickable="true"/>

    <Button
        android:id="@+id/btnHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="Home"
        android:textAlignment="center"
        android:textSize="20sp" />

</RelativeLayout>
